#QueryScope=General
#QueryReturnType=Table
#QueryResults=A table containing the Id and matching literal for the given query and language tag with the given limit
#QueryParams=QUERY,LANG,LIM
#QueryUrl=/lds-pdi/query?searchType=pdi_any_luceneLabel&QUERY=("mkhan chen" AND ("\'od zer" OR "ye shes"))&LANG=bo-x-ewts&LIM=100


select distinct ?s ?lit
WHERE
{
  (?s ?sc ?lit) text:query ( '${QUERY}'@${LANG} ) .
} limit ${LIM}
